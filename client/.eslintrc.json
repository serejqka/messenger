{
  "extends": [
    "airbnb-base",
    "next/core-web-vitals",
    "prettier",
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended",
    "plugin:react/recommended"
  ],
  "overrides": [],
  "plugins": [
    "import",
    "react",
    "@typescript-eslint",
    "prettier",
    "autofix"
  ],
  "settings": {
    "react": {
      "version": "18.2.0"
    }
  },
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "arrowParens": "always",
        "endOfLine": "lf",
        "printWidth": 100,
        "semi": true,
        "singleQuote": true,
        "jsxSingleQuote": true,
        "tabWidth": 2,
        "trailingComma": "all"
      }
    ],

    // Rules that can fixed automatically
    "autofix/no-unused-vars": "warn",
    "autofix/no-console": "warn",
    "autofix/no-debugger": "warn",
    "autofix/no-plusplus": "warn",
    "autofix/eqeqeq": "warn",
    "autofix/no-alert": "warn",
    "autofix/no-else-return": "warn",
    "autofix/no-multiple-empty-lines": "warn",
    "autofix/no-var": "warn",
    "autofix/no-useless-concat": "warn",
    "autofix/no-lonely-if": "warn",
    "autofix/prefer-template": "warn",

    "import/prefer-default-export": "off",
    "react/react-in-jsx-scope": "off",
    "import/no-extraneous-dependencies": "off" ,
    "@typescript-eslint/no-var-requires": "off"
  }
}
